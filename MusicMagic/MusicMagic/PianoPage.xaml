<Page
    x:Class="MusicMagic.PianoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MusicMagic"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="backButton" Margin="39,59,39,0" Command="{Binding NavigationHelper.GoBackCommand, ElementName=pageRoot}"
                        Style="{StaticResource NavigationBackButtonNormalStyle}"
                        VerticalAlignment="Top"
                        AutomationProperties.Name="Back"
                        AutomationProperties.AutomationId="BackButton"
                        AutomationProperties.ItemType="Navigation Button"/>
            <TextBlock x:Name="pageTitle" Text="Piano" Style="{StaticResource HeaderTextBlockStyle}" Grid.Column="1" 
                        IsHitTestVisible="false" TextWrapping="NoWrap" VerticalAlignment="Bottom" Margin="471,0,-41,65"/>
        </Grid>

        <!--Sound files for keys-->
        <MediaElement Source="Resources\piano-a.wav" Name="pianoA"/>
        <MediaElement Source="Resources\piano-b.wav" Name="pianoB"/>
        <MediaElement Source="Resources\piano-c.wav" Name="pianoC"/>
        <MediaElement Source="Resources\piano-d.wav" Name="pianoD"/>
        <MediaElement Source="Resources\piano-e.wav" Name="pianoE"/>
        <MediaElement Source="Resources\piano-f.wav" Name="pianoF"/>
        <MediaElement Source="Resources\piano-g.wav" Name="pianoG"/>
        
        <!-- Canvas for the bars of music-->
        <Canvas Height="200" Margin="65,5,36,423" Grid.Row="1" x:Name="staff">


            <Line
                X1="0" Y1="20"
                X2="1265" Y2="20"
                Stroke="Gray" StrokeThickness="2"
              />
            <Line
                X1="0" Y1="60"
                X2="1265" Y2="60"
                Stroke="Gray" StrokeThickness="2"
              />
            <Line
                X1="0" Y1="100"
                X2="1265" Y2="100"
                Stroke="Gray" StrokeThickness="2"
              />
            <Line
                X1="0" Y1="140"
                X2="1265" Y2="140"
                Stroke="Gray" StrokeThickness="2"
              />
            <Line
                X1="0" Y1="180"
                X2="1265" Y2="180"
                Stroke="Gray" StrokeThickness="2"
              />

            <!--Notes-->
            <!--Will probbaly fix later to not suck-->
            <Ellipse x:Name="slota"
                Canvas.Left="30"
                Canvas.Top="110"
                Height="20"
                Width="20"
                Fill="White"
                />

        </Canvas>

